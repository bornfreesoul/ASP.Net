using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace VarianceAtCompletion
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("*** Welcome to the Variance At Completion calculator. ***\n");
            Console.WriteLine("This formula consists of two things.");
            Console.WriteLine("1. BAC; 2. EAC \n");

            float VC, BAC, EAC;

            Console.WriteLine("Please enter the BAC: ");
            BAC = float.Parse(Console.ReadLine());

            Console.WriteLine("Please enter the EAC: ");
            EAC = float.Parse(Console.ReadLine());

            VC = BAC - EAC;

            Console.WriteLine("The VC is: " + VC);
            Console.ReadLine();
        }
    }
}


//(VC) = BAC â€“ EAC Done
